{
  "name": "@cronn/k6-scenario-builder",
  "version": "1.0.0",
  "description": "Create k6 scenarios using a builder",
  "keywords": [
    "k6"
  ],
  "bugs": {
    "url": "https://github.com/cronn/k6-scenario-builder/issues"
  },
  "author": "cronn",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cronn/k6-scenario-builder.git"
  },
  "homepage": "https://github.com/cronn/k6-scenario-builder",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "compile": "tsc",
    "build": "tsup src/index.ts",
    "ci": "biome ci . && pnpm run compile & pnpm run test:coverage",
    "prepublishOnly": "pnpm run ci",
    "version": "pnpm changeset version && pnpm biome format --write package.json",
    "release": "pnpm run build && pnpm changeset publish"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@changesets/cli": "2.29.5",
    "@cronn/vitest-file-snapshots": "0.9.2",
    "@types/k6": "1.3.0",
    "@types/node": "22.16.5",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/expect": "3.2.4",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  }
}
