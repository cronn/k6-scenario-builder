{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "erasableSyntaxOnly": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./types",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "vitest.config.ts",
    "tsup.config.ts",
    "vitest-setup.ts",
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
